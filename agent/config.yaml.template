# Configuração do LabAgent
# Este arquivo será criado automaticamente na primeira execução

api:
  # URL da API do Laravel (será solicitada na primeira execução)
  # Exemplos: http://192.168.1.100/api/v1/agent, http://servidor-ifg.local/api/v1/agent
  url: http://localhost:8000/api/v1/agent
  
  # API Key (será solicitada na primeira execução)
  key: ''

laboratorio:
  # ID do laboratório deste computador (será solicitado na primeira execução)
  id: null

coleta:
  # Intervalo entre coletas em segundos (300 = 5 minutos)
  intervalo_segundos: 300

logging:
  # Nível de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
  level: INFO
  
  # Arquivo de log
  arquivo: agent.log
  
  # Tamanho máximo do arquivo de log em MB
  max_size_mb: 10

